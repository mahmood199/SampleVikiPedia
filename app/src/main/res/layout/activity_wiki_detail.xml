<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.search_result_detail.WikiDetailActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_wiki_thumbnail"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_200"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_horizontal_15" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_field_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_vertical_85"
        app:layout_constraintStart_toStartOf="@+id/gl_vertical_15"
        app:layout_constraintTop_toBottomOf="@+id/iv_wiki_thumbnail"
        tools:text="Text Feild 1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_field_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_vertical_85"
        app:layout_constraintStart_toStartOf="@+id/gl_vertical_15"
        app:layout_constraintTop_toBottomOf="@+id/tv_field_1"
        tools:text="Text Feild 2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_field_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_32"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_vertical_85"
        app:layout_constraintStart_toStartOf="@+id/gl_vertical_15"
        app:layout_constraintTop_toBottomOf="@+id/tv_field_2"
        tools:text="Text Feild 3" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_horizontal_15"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_15"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_85"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />


</androidx.constraintlayout.widget.ConstraintLayout>